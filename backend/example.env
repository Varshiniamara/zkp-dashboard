# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/zkp-dashboard
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/zkp-dashboard
MONGO_URI=mongodb://localhost:27017/zkp-dashboard

# JWT Configuration
JWT_SECRET=zkp_dashboard_jwt_secret_key_2024_secure_random_string_change_in_production
JWT_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# API Keys - Add your actual keys here
# Blockchain/Web3 APIs
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here
INFURA_API_SECRET=your_infura_api_secret_here

# Etherscan API (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Starknet/StarkWare
STARKNET_RPC_URL=https://starknet-mainnet.infura.io/v3/YOUR_INFURA_KEY

# ML Model API (for credit score prediction)
ML_API_URL=http://localhost:5001
ML_API_KEY=your_ml_api_key_here

# OpenAI API (optional - for enhanced features)
OPENAI_API_KEY=your_openai_api_key_here

# AWS S3 (optional - for proof storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=zkp-proofs-bucket

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Service (optional)
SENDGRID_API_KEY=your_sendgrid_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
